<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="HomeViewModel"
            type="com.bw.mainpage.mvvm.viewmodel.NewListViewModel"/>
    </data>
    <LinearLayout
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvvm.HomeActivity">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#FF0000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:paddingHorizontal="30dp"
                android:gravity="center"
                android:text="微头条"
                android:layout_width="wrap_content"
                android:layout_height="56dp"></TextView>

            <!--        <com.bw.journalism.CustomizeBar-->
            <!--            android:paddingHorizontal="50dp"-->
            <!--            android:layout_width="250dp"-->
            <!--            android:layout_height="wrap_content">-->
            <!--        </com.bw.journalism.CustomizeBar>-->


            <EditText
                android:id="@+id/home_btn"
                android:textSize="16dp"
                android:hint="搜你想搜的！"
                android:padding="5dp"
                android:background="@drawable/background_y"
                android:layout_weight="3"
                android:drawableLeft="@drawable/search_24"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
            </EditText>

            <ImageView
                android:paddingHorizontal="10dp"
                android:src="@drawable/ratio_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <com.flyco.tablayout.SlidingTabLayout

                app:tl_textsize="16sp"
                android:layout_weight="2"
                app:tl_textUnselectColor="#000"
                app:tl_textSelectColor="#F44336"
                android:id="@+id/main_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.flyco.tablayout.SlidingTabLayout>

            <ImageView
                android:id="@+id/home_add"
                android:src="@drawable/add_24"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="match_parent">

            </ImageView>
        </LinearLayout>


        <androidx.viewpager.widget.ViewPager
            android:layout_weight="7"
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>


        <com.ashokvarma.bottomnavigation.BottomNavigationBar

            android:id="@+id/main_bnb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.ashokvarma.bottomnavigation.BottomNavigationBar>




    </LinearLayout>
</layout>