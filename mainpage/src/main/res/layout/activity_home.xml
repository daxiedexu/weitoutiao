<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvm.HomeActivity">


    <LinearLayout
        android:background="#F44336"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:paddingHorizontal="30dp"
            android:gravity="center"
            android:text="微头条"
            android:layout_width="wrap_content"
            android:layout_height="56dp"></TextView>

        <!--        <com.bw.journalism.CustomizeBar-->
        <!--            android:paddingHorizontal="50dp"-->
        <!--            android:layout_width="250dp"-->
        <!--            android:layout_height="wrap_content">-->
        <!--        </com.bw.journalism.CustomizeBar>-->


        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content">
        </EditText>


        <ImageView
            android:paddingHorizontal="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <com.flyco.tablayout.SlidingTabLayout
            android:layout_weight="2"
            app:tl_indicator_width="20dp"
            app:tl_indicator_height="20dp"
            app:tl_textUnselectColor="#000"
            app:tl_textSelectColor="#F44336"
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.flyco.tablayout.SlidingTabLayout>

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </ImageView>
    </LinearLayout>




    <androidx.viewpager.widget.ViewPager
        android:layout_weight="7"
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/main_bnb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.ashokvarma.bottomnavigation.BottomNavigationBar>


</LinearLayout>